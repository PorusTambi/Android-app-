<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.thescientistsapp.einstein_activity">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/p"
                android:scaleType="centerCrop"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:text="Swipe from left for choices"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:textSize="20sp"/>

        </RelativeLayout>

    </FrameLayout>

    <RelativeLayout
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:divider="@null"
        android:layout_gravity="left">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/pattern"
            android:scaleType="centerCrop"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Schrodinger"
            android:layout_gravity="center"
            android:layout_marginTop="32dp"
            android:textSize="20sp"
            android:textColor="#311B92"/>
        <ScrollView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            android:layout_marginTop="190dp">
            <LinearLayout
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:layout_width="240dp"
                    android:layout_height="75dp"
                    android:text="History"
                    android:onClick="a9"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:background="#FFFFFF" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:background="#000000"/>
                <Button
                    android:layout_width="240dp"
                    android:layout_height="75dp"
                    android:text="Interesting Facts"
                    android:onClick="a10"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:background="#FFFFFF" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:background="#000000"/>
                <Button
                    android:layout_width="240dp"
                    android:layout_height="75dp"
                    android:text="Stories Of Schrodinger"
                    android:onClick="a11"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:background="#FFFFFF" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:background="#000000"/>
                <Button
                    android:layout_width="240dp"
                    android:layout_height="75dp"
                    android:text="Theories"
                    android:onClick="a12"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:background="#FFFFFF" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:background="#000000"/>

            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</android.support.v4.widget.DrawerLayout>
